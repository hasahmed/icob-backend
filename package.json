{
  "name": "icob-app-backend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/basic-auth": "^1.1.2",
    "@types/chance": "^1.0.1",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.10",
    "@types/knex": "^0.15.1",
    "@types/nodemailer": "^4.6.5",
    "@types/prompts": "^1.1.1",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.0",
    "basic-auth": "^2.0.1",
    "chalk": "1.1.3",
    "chance": "^1.0.18",
    "concurrently": "^4.1.0",
    "express": "^4.16.4",
    "fs-extra": "3.0.1",
    "jest": "20.0.4",
    "knex": "^0.15.2",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.18.6",
    "promise": "8.0.1",
    "prompts": "git+https://github.com/hasahmed/prompts.git",
    "random-name": "^0.1.2",
    "sqlite": "^3.0.0",
    "tslint": "^5.7.0",
    "tslint-config-prettier": "^1.10.0",
    "typescript": "^3.2.2",
    "uuid": "^3.3.2"
  },
  "scripts": {
    "tsc": "tsc",
    "knex-script": "knex --knexfile src/backend/dist/backend/knexfile.js",
    "migrations": "npm run knex-script -- migrate:latest",
    "nodemon": "nodemon",
    "jest": "jest",

    "dist-clear": "rmtrash src/backend/dist",
    "init-config": "node src/backend/dist/backend/bin/init-config.js",

    "build": "npm run tsc -- -p src/backend",
    "start": "npm run build -- --watch",
    "test": "jest --config=src/backend/jest.conf.json",
    "serve": "nodemon --config src/backend/nodemon.json src/backend/dist/backend/server.js",
    "watch": "concurrently --kill-others 'npm:build:watch' 'npm:serve'",
    "rebuild:watch": "npm run dist-clear && npm run build && npm run watch",
    "postinstall": "npm run backend:build"
  }
}
